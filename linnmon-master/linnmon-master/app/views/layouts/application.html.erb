<!DOCTYPE html>
<html>
  <head>
    <title>Linnmon</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="bg-gray">
  <% if current_user %>
  <div class="header bg-gray-dark text-gray p-3">
    <h2 class="mx-2 title">Linnmon</h2>
    <div class="items d-flex">
      <div class="mx-2"><%= link_to 'Users', users_path, class: 'menu-thing' %></div>
      <div class="mx-2"><%= link_to 'Rests', restaraunts_path, class: 'menu-thing' %></div>
      <div class="mx-2"><%= link_to 'Foodcourts', foodcourts_path, class: 'menu-thing' %></div>
      <div class="mx-2"><%= link_to 'Cuisines', cuisines_path, class: 'menu-thing' %></div>
    </div>
  </div>
    <% end %>
    <div class="mx-4">
      <%= yield %>
    </div>
  </body>
</html>
