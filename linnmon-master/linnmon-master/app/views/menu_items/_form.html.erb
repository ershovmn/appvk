<%
  if params[:action] == 'new' || params[:action] == 'create'
    path = restaraunt_menu_items_path(params[:restaraunt_id])
  else
    path = restaraunt_menu_item_path(params[:restaraunt_id], params[:id])
  end
%>

<%= form_with(model: [restaraunt, menu_item], local: true, url: path) do |form| %>
  <% if menu_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(menu_item.errors.count, "error") %> prohibited this menu_item from being saved:</h2>

      <ul>
        <% menu_item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :photo %>
    <%= form.file_field :photo %>
  </div>

  <div class="field">
    <%= form.label :menu_category_id %>
    <%= form.text_field :menu_category_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
